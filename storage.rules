
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files by anyone
    match /{allPaths=**} {
      allow read;
    }

    // Allow write access only for match-results images for authenticated users
    match /match-results/{matchId}/{userId}_{timestamp} {
      allow write: if request.auth != null;
    }
  }
}
