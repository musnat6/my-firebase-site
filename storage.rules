rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to upload match results if they are authenticated.
    match /match-results/{matchId}/{userId}/{fileName} {
      allow write: if request.auth != null;
      allow read; // Allow anyone to read result screenshots (e.g., admin)
    }

    // Deny all other operations on storage by default for security
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
